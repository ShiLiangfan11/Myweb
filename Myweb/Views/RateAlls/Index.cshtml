@model IEnumerable<Myweb.Models.RateAll>

@{
    ViewBag.Title = "My Ratings";
}

<h2>My Ratings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>AScore</th>
        <th>BScore</th>
        <th>CScore</th>
        <th>Comment</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AScore</td>
            <td>@item.BScore</td>
            <td>@item.CScore</td>
            <td>@item.Comment</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<h3>All Users' Average Scores</h3>
<p>Average A Score: @ViewBag.AverageScoreA</p>
<p>Average B Score: @ViewBag.AverageScoreB</p>
<p>Average C Score: @ViewBag.AverageScoreC</p>
