@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <h2>News</h2>
            <!-- Add Carousel -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Content/images/help1.png" alt="First slide" style="height: 500px;">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/images/help1.png" alt="Second slide" style="height: 500px;">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/images/help1.png" alt="Third slide" style="height: 500px;">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <h3>How We Help</h3>
            <div class="row">
                <div class="col-4 text-center">
                    <img src="~/Content/images/help1.png" class="img-fluid" alt="Grants">
                    <p>GRANTS</p>
                </div>
                <div class="col-4 text-center">
                    <img src="~/Content/images/help1.png" class="img-fluid" alt="Arts">
                    <p>ARTS</p>
                </div>
                <div class="col-4 text-center">
                    <img src="~/Content/images/help1.png" class="img-fluid" alt="Volunteering">
                    <p>VOLUNTEERING</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <h3>Calendar</h3>
            <div>
                <!-- Calendar Placeholder -->
                <img src="~/Content/images/help1.png" class="img-fluid" alt="Calendar" style="height: 250px;">
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <h3>Support Our Work</h3>
            <div class="row">
                <div class="col-4 text-center">
                    <img src="~/Content/images/help1.png" class="img-fluid" alt="Donate Now">
                    <p>DONATE NOW</p>
                </div>
                <div class="col-4 text-center">
                    <img src="~/Content/images/help1.png" class="img-fluid" alt="Fundraise for Us">
                    <p>FUNDRAISE FOR US</p>
                </div>
                <div class="col-4 text-center">
                    <img src="~/Content/images/help1.png" class="img-fluid" alt="Volunteer with Us">
                    <p>VOLUNTEER WITH US</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-12">
                    <h3>Contact Us</h3>
                </div>
                <div class="col-6">
                    <p>Phone: +86 1654681720</p>
                    <p>Email: info@example.com</p>
                </div>
                <div class="ca-and">
                    <!-- Map Placeholder -->
                    <img src="~/Content/images/help1.png" class="img-fluid" alt="Map">
                </div>
            </div>
            <div class="mt-4">
                <div class="d-flex justify-content-center">
                    <a href="#"><img src="~/Content/images/help1.png" alt="Twitter" class="social-icon"></a>
                    <a href="#"><img src="~/Content/images/help1.png" alt="Facebook" class="social-icon"></a>
                    <a href="#"><img src="~/Content/images/help1.png" alt="LinkedIn" class="social-icon"></a>
                </div>
            </div>
            <div class="mt-4 text-center">
                <button class="btn btn-secondary accessibility-btn">Accessibility Settings</button>
                <button class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "RateAlls")'">Rate Us</button>



            </div>

        </div>
    </div>
</div>

<!-- Link to Site.css -->
<link rel="stylesheet" href="~/Content/Site.css">
